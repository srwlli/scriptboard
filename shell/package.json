{
  "name": "scriptboard-shell",
  "version": "0.1.0",
  "description": "Electron shell for Scriptboard application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "echo 'Backend packaging - see instructions in README'",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.scriptboard.app",
    "productName": "Scriptboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../frontend/.next/**/*",
      "../frontend/public/**/*",
      "../backend/**/*",
      "!../backend/venv/**/*",
      "!../backend/__pycache__/**/*",
      "!../backend/tests/**/*",
      "!../backend/sessions/**/*",
      "!../backend/logs/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
